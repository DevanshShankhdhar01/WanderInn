<style>
  .btn-search {
      background-color: #fe424d;
      color: #fff;
      border: none;
      transition: background 0.2s;
      margin-left: 1rem;
      
  }
  .btn-search:hover, .btn-search:focus {
      background-color: red;
      color: #fff;
  }
  .search-input {
      width: 20rem;
      border-radius: 1rem;
      padding: 0.5rem 3rem ;
      border: 1px solid #ccc;
      font-size: 0.9rem;
      
  }
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-solid fa-house"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">        
        <a class="nav-link" href="/listings">Explore</a>        
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-input" type="search" placeholder="Search destinations">
          <button class="btn btn-search" type="submit">Search</button>
        </form>
      </div>
      <div class="navbar-nav ms-auto me-5">
        <a class="nav-link" href="/listings/new">Add new Listing</a>
        <% if (curUser) { %>
          <a class="btn btn-outline-danger" href="/users/logout"><b>Logout</b></a>
        <% } else { %>
          <a class="btn btn-outline-primary me-2" href="/users/signup"><b>Sign Up</b></a>
          <a class="btn btn-outline-success me-2" href="/users/login"><b>Login</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>