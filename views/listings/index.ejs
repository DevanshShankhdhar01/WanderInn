<% layout('layouts/boilerplate') -%>

<style>
    .filters{
        display:flex;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .filter{
        text-align: center;
         padding: 0.5rem 0.5rem;
        /*border: 1px solid #ccc;
        border-radius: 0.5rem;
        background-color: #f8f9fa; */
        transition: background-color 0.3s;
        margin-top: 0.5rem;
        opacity: 0.8;
    }
    .filter:hover{
        background-color: #e9ecef;
        opacity: 1;
        cursor:pointer;
    }
    .filter span{
        font-size: 0.8rem;
    }
    .tax-info {
        font-size: 0.8rem;
        display: none;
    }
    .tax-toggle{
        height: 3.5rem;
        text-align: center;
        padding: 0.5rem 1rem;
        border: 1px solid gray;
        border-radius: 0.5rem;
        padding: 1rem;
        transition: background-color 0.3s;
        margin-top: 0.5rem;
        opacity: 0.9;
        margin-left: 3rem;
    }
    .tax-toggle:hover{
        background-color: #e9ecef;
        opacity: 1;
        cursor:pointer;
    }
</style>

<body>
   <br>
    <div class="filters" id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <span>Trending</span>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <span>Rooms</span>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <span>Iconic cities</span>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <span>Mountains</span>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <span>Castles</span>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <span>Amazing Pools</span>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <span>Camping</span>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <span>Farms</span>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <span>Arctic</span>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <span>Domes</span>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <span>Boats</span>
        </div>

        
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault"> Display total after taxes</label>
            </div>
        </div>
        

    </div>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-4 mt-3">
        <%for(let listing of alllistings){%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card listing-card col" >
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem; ">
                    <div class="card-img-overlay">  </div>
                    <div class="card-body">
                        <!-- <h5 class="card-title">Card title</h5> -->
                        <p class="card-text">
                            <b><%=listing.title%></b><br>
                            &#8377; <%=listing.price.toLocaleString("en-IN")%>/night
                            <span class="tax-info"> +18% GST</span>
                        </p>
                        
                    </div>
                </div>
            </a>
        <%}%>
    </div>
    
    
    
</body>

<script>
    let priceToggle=document.getElementById('switchCheckDefault');
    priceToggle.addEventListener('change',function(){
        
        if(this.checked){
            // Show prices after tax
            let taxInfo=document.querySelectorAll('.tax-info');
            for(info of taxInfo){
                info.style.display="inline";
            }
            console.log("checked");
        }else{
            // Show prices before tax
            let taxInfo=document.querySelectorAll('.tax-info');
            for(info of taxInfo){
                info.style.display="none";
            }
            console.log("unchecked");
        }
    });
</script>


